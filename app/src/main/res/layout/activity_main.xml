<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFFFFF">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/staat"
        android:shadowColor="@color/black"
        android:text="CYBELE\nMINI\nGAMES"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_margin="25dp"


        android:textAlignment="center"
        android:textColor="@color/redpink"
        android:textSize="50sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/selectButton"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_below="@+id/textView"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:background="@drawable/main_scr_select"
        android:fontFamily="@font/staat"

        android:onClick="selectScr"
        android:text="PLAY"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold"

        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_below="@+id/selectButton"


        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/main_scr_select"
        android:onClick="exitMain"

        android:text="EXIT"
        android:textSize="35dp"
        android:textStyle="bold"
        android:fontFamily="@font/staat"
        android:textColor="@color/black"

        app:layout_constraintTop_toBottomOf="@+id/selectButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <Button
        android:id="@+id/loginMain"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_below="@+id/exitButton"


        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/main_scr_select"

        android:fontFamily="@font/staat"
        android:text="Profile"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:onClick="onClickLoginMain"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exitButton" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="340dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="272dp"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:lottie_autoPlay="true"
        app:lottie_fileName="joystick.json"
        app:lottie_loop="true" />


</androidx.constraintlayout.widget.ConstraintLayout>